
  <div class="card card-review text-dark bg-light border-dark" >
    <div class="card-header">
      Rating: <%= review.rating %>/5
      <%= link_to "", edit_experience_review_path(@experience, review), class: 'btn btn-ghost fa-solid fa-pen' %>
      <%= link_to "", experience_review_path(@experience, review), class: 'btn btn-ghost fa-solid fa-trash', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </div>
    <div class="card-body">
      <p class="card-text"> <%= review.comment %> </p>
    </div>
    <div class="card-footer text-muted">
      By <%= review.user.first_name %> <%= review.user.last_name %> | <%= review.created_at %>
    </div>
  </div>
