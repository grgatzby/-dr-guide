<div class="banner">
  <div class="container">
    <img <%= image_tag "experience-acropolis", alt: "acropolis" %> >
  </div>
</div>



<div class="experience-info">
  <div class="container exp-container">
    <div class="row row-cols-auto">
      <div class="col-md-10">
        <h2><%= @experience.title %></h2>
        <h5><%= @experience.location %> | <%= @experience.category %> </h5>
        <p><%= @experience.description %></p>
      </div>
      <div class="com-md-2">
      <%= link_to "Create Review", new_experience_review_path(:experience => { :experience.id => :experience.id}) %>

      </div>
    </div>
  </div>
</div>


<div class="review">
  <div class="container">
    <div class="cards-review">
       <% @reviews.each do |review| %>
        <%= render "review", review: review %>
       <% end %>
    </div>
  </div>
</div>
