<div class="banner">
  <div class="container">
    <div class = "image-experience">
      <%= image_tag cl_image_path @experience.photo.key %>
    </div>
  </div>
</div>



<div class="experience-info">
  <div class="container exp-container">
    <div class="row row-cols-auto">
      <div class="col-md-12">
        <h2><%= @experience.title %></h2>
        <h5><%= @experience.location %> | <%= @experience.category %> </h5>
        <p><%= @experience.description %></p>
      </div>
      <div class="com-md-0">

      </div>

    </div>
  </div>
</div>


<div class="review">
  <div class="container">
    <div class="cards-review">
       <% @reviews.each do |review| %>
        <%= render "review", review: review %>
       <% end %>
    </div>
  </div>
</div>
