<div class="experience-info">
  <div class="container exp-container">
    <div class="row row-cols-auto">
      <div class="col-md-12">
        <h5><%= @experience.location %> | <%= @experience.category %> </h5>
        <p><%= @experience.description %></p>
      </div>
      <div class="com-md-0">
          <h2><%= @experience.title %></h2>
          <%= link_to "Edit experience", edit_experience_path(@experience), class: "btn btn-ghost"%>
          <%= link_to "Remove this experience", experience_path(@experience), class: "btn btn-ghost", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
          <%= link_to "Add a review", new_experience_review_path(@experience), class: "btn btn-ghost"%>
          <%= link_to "Book your experience", new_experience_booking_path(@experience), class: 'btn btn-ghost' %>
          <%= link_to "Back to Home page", experiences_path, class:"btn btn-ghost"%>
      </div>
    </div>
  </div>
</div>


<div class="review">
  <div class="container">
    <div class="cards-review">
       <% @reviews.each do |review| %>
        <%= render "review", review: review %>
       <% end %>
    </div>
  </div>
</div>
