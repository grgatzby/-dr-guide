<div class="container-form">
  <h1>Edit your review</h1>
  <%= render "experiences/show_details_in_form", experience: @experience %>
  <div class="form">
  <%= simple_form_for [@experience, @review] do |f| %>
    <%= f.input :comment %>
    <%= f.input :rating %>
    <div class="form-actions">
      <%= f.submit "Update review", class: "btn btn-ghost"%>
      <%= link_to "Back", experience_path(@experience), class: "btn btn-ghost"%>
    </div>
  <% end %>
  </div>
</div>
